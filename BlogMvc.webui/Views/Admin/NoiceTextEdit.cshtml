@model NoiceTextModel


<form asp-controller="Admin" asp-action="NoiceTextEdit" method="POST" enctype="multipart/form-data">
    @* verileri server'a dosya olarak taşıyan framework 'enctype' *@
    <div class="row m-0">
        <div class="col-md-12">
                <h3 class="mb-4 mt-4">Notice Edit</h3>
                <hr>
                <div class="row m-0">
                    <div class="col-md-8 p-0">
                        <input type="hidden" name="NoiceId" value="@Model.NoiceId">
                        <div class="form-group row m-2">
                            <label asp-for="NoiceContent" class="col-sm-2 col-form-label">NOTİCE TEXT</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" asp-for="NoiceContent"></textarea>
                            </div>
                        </div>
                        <div class="form-group row m-2">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="IsHome" type="checkbox" class="custom-control-input">
                            <label asp-for="IsHome" class="custom-control-label">Anasayfa Onayı</label>
                        </div>
                    </div>
                </div>
        </div>
    </div>
 </form>